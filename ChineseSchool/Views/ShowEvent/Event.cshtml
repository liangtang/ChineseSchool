@model ChineseSchool.Entities.Event
@{
    ViewBag.Title = "Event";
}

<div class="panel  panel-primary">
    <div class="panel-heading">
        <h2>@Model.EventName (@Model.EventDate.ToShortDateString())</h2>
    </div>
    <br />
    <br />
    <br />
    <div class="panel-body">
    
        @foreach (var image in Model.Images)
        {
            <div class="col-md-2">
                <a href="../../Content/eventimages/@image.ImagePath" target="_blank"><img src="../../Content/eventimages/@image.ThumbNailPath" class="img-thumbnail" /></a>
            </div>
        }
    </div>
    <br/>
    <br/>
    <div class="panel-body">

        @foreach (var video  in Model.Videos)
        {
            <div class="col-md-6">
                <p><iframe width="640" height="480" src="@video.VideoLink" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe></p>
            </div>
        }
    </div>

</div>