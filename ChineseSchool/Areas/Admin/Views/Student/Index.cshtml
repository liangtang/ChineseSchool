            @Html.DisplayFor(modelItem => item.Lastname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MiddleInitial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Chinesename)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Birthday)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Class)
        </td>
        <td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { studentId=item.StudentId }) |
            @Html.ActionLink("Details", "Details", new { studentId=item.StudentId }) |
            @Html.ActionLink("Assign Class", "AssignClass", new { studentId=item.StudentId })
        </td>
    </tr>
}

</table>
