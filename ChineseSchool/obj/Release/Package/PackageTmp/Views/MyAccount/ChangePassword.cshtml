@model ChineseSchool.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "ChangePassword";
}

@Html.Action("MyAccountNavBar", new { controller = "MyAccount", area = "", currentTab = "ChangePassword" })

<div class="panel-primary col-md-offset-1 col-md-9">
    <div class="panel-heading">Change Password</div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.OldPassword, new { @class = "control-label col-md-4 text-primary" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.OldPassword)
                    @Html.ValidationMessageFor(model => model.OldPassword)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NewPassword, new { @class = "control-label col-md-4 text-success" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.NewPassword)
                    @Html.ValidationMessageFor(model => model.NewPassword)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmNewPassword, new { @class = "control-label col-md-4 text-success" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.ConfirmNewPassword)
                    @Html.ValidationMessageFor(model => model.ConfirmNewPassword)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <input type="submit" value="Change Password" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>
<div>
    @Html.ActionLink("Back to Dashboard", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}