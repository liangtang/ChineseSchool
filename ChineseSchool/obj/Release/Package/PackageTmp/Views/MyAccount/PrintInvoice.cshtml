@model ChineseSchool.Models.InvoiceViewModel
@{
    ViewBag.Title = "PrintInvoice";
    Layout = "~/Views/Shared/_Invoice_Layout.cshtml";
}

<div class="panel-heading"><h2>Invoice @Model.Invoice.InvoiceNo</h2></div>

<div class="col-xs-5 panel-default" style="height:250px;border:1px solid grey">
    <div class="panel-heading">
        <h4>Bill To:</h4>
    </div>
    <div class="panel-body">
        @Model.Parent.Parent1Firstname @Model.Parent.Parent1LastName <br/>
        @Model.Parent.AddressLine1 <br />
        @Model.Parent.City @Model.Parent.State @Model.Parent.ZipCode
    </div>
</div>
<div class="col-xs-offset-1 col-xs-5 panel-default" style="height:250px;border:1px solid grey">
    <div class="panel-heading">
        <h4>Mail To:</h4>
    </div>
    <div class="panel-body">
        Chinese Center Of Toledo <br/>
        P.O. Box 350445 <br/>
        Toledo OH 43635
    </div>
</div>

<table class="table">
    <tr>
        <th>
            Description
        </th>

        <th>
            Amount
        </th>
        <th>
            Date
        </th>




    </tr>

    @foreach (var item in Model.Transactions)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionDate)
            </td>


        </tr>
    }
    <tr>
        <td>Total</td>
        <td>@Model.Invoice.Amount</td>
        <td></td>
    </tr>
   
</table>