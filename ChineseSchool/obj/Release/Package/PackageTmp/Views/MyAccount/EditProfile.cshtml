@model ChineseSchool.Models.EditProfileViewModel

@{
    ViewBag.Title = "Edit Profile";
}

@Html.Action("MyAccountNavBar", new { controller = "MyAccount", area = "", currentTab = "EditProfile" })

<div class="col-md-offset-1 col-md-9 panel-primary">
    <div class="panel-heading">Edit Your Profile:</div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2 text-success" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Firstname, new { @class = "control-label col-md-2 text-success" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Firstname)
                    @Html.ValidationMessageFor(model => model.Firstname)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Lastname, new { @class = "control-label col-md-2 text-success" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Lastname)
                    @Html.ValidationMessageFor(model => model.Lastname)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
