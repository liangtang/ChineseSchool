            if (!value1 && !value2) {
                itemsToBeDelete[itemsToBeDelete.length] = $('#students tr:nth-of-type(' + i + ')');
            }
        }

        for (var index = 0; index < itemsToBeDelete.length; index++) {
            itemsToBeDelete[index].remove();
        }
    }

